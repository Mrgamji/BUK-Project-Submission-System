<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Error</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      min-height: 100vh;
      display: flex;
      align-items: center;
      justify-content: center;
    }
  </style>
</head>
<body>
  <div class="container">
    <div class="row">
      <div class="col-md-6 mx-auto">
        <div class="card border-0 shadow-sm">
          <div class="card-body text-center p-5">
            <h1 class="display-1 text-danger">!</h1>
            <h2 class="mb-3"><%= typeof message !== 'undefined' ? message : 'Error' %></h2>
            <p class="text-muted"><%= typeof error !== 'undefined' ? error : 'An unexpected error occurred' %></p>
            <% 
              let dashboardUrl = '/dashboard';
              if (typeof user !== 'undefined' && user && user.role) {
                switch(user.role) {
                  case 'student':
                    dashboardUrl = '/student/dashboard';
                    break;
                  case 'supervisor':
                    dashboardUrl = '/supervisor/dashboard';
                    break;
                  case 'level_coordinator':
                    dashboardUrl = '/coordinator/dashboard';
                    break;
                  case 'hod':
                    dashboardUrl = '/hod/dashboard';
                    break;
                  case 'general_admin':
                    dashboardUrl = '/admin/dashboard';
                    break;
                  default:
                    dashboardUrl = '/dashboard';
                }
              }
            %>
            <a href="<%= dashboardUrl %>" class="btn btn-primary mt-3">Go to Dashboard</a>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>
</html>
