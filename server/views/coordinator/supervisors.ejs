<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= typeof title !== 'undefined' ? title : 'Supervisors Management' %></title>
    
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <!-- Custom Styles -->
    <style>
        :root {
            --buk-blue: #0d6efd;
            --buk-dark: #212529;
        }
        
        .table th {
            font-weight: 600;
            color: var(--buk-dark);
        }

        .badge {
            font-weight: 500;
        }

        .card {
            transition: all 0.3s ease;
        }

        .page-title {
            color: var(--buk-dark);
            font-weight: 700;
        }
        
        .page-subtitle {
            color: #6c757d;
            font-size: 0.9rem;
        }

        .supervisor-avatar {
            width: 45px;
            height: 45px;
            background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-weight: 600;
            font-size: 0.9rem;
        }

        .capacity-bar {
            height: 8px;
            border-radius: 4px;
            overflow: hidden;
        }

        .stats-card {
            border-left: 4px solid;
            transition: transform 0.2s ease;
        }

        .stats-card:hover {
            transform: translateY(-2px);
        }

        .supervisor-card {
            transition: all 0.3s ease;
            border: 1px solid #e9ecef;
        }

        .supervisor-card:hover {
            transform: translateY(-3px);
            box-shadow: 0 4px 15px rgba(0,0,0,0.1);
        }

        .availability-high { background-color: #28a745; }
        .availability-medium { background-color: #ffc107; }
        .availability-low { background-color: #dc3545; }
        .availability-full { background-color: #6c757d; }
    </style>
</head>
<body>
    <div class="container-fluid">
        <!-- Header Section -->
        <div class="row mb-4">
            <div class="col-12">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h1 class="page-title mb-1">
                            <i class="bi bi-person-badge me-2"></i>Supervisors Management
                        </h1>
                        <p class="page-subtitle mb-0">
                            Manage supervisors and their capacity for <%= typeof level !== 'undefined' ? level : '' %> Level
                        </p>
                    </div>
                    <div class="text-end">
                        <div class="btn-group">
                            <button class="btn btn-outline-primary" data-bs-toggle="modal" data-bs-target="#addSupervisorModal">
                                <i class="bi bi-person-plus me-1"></i>Add Supervisor
                            </button>
                            <button class="btn btn-outline-secondary" id="refreshBtn">
                                <i class="bi bi-arrow-clockwise me-1"></i>Refresh
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Alert Messages -->
        <% if (typeof success !== 'undefined' && success) { %>
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="bi bi-check-circle-fill me-2"></i><%= success %>
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        <% } %>
        
        <% if (typeof error !== 'undefined' && error) { %>
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="bi bi-exclamation-triangle-fill me-2"></i><%= error %>
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        <% } %>

        <!-- Quick Statistics -->
        <div class="row mb-4">
            <div class="col-xl-3 col-md-6 mb-4">
                <div class="card stats-card border-left-primary border-0 shadow-sm h-100">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="card-title text-muted mb-2">Total Supervisors</h6>
                                <h3 class="fw-bold text-primary mb-0"><%= totalSupervisors || 0 %></h3>
                            </div>
                            <div class="bg-primary bg-opacity-10 p-3 rounded">
                                <i class="bi bi-person-badge text-primary fs-4"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-xl-3 col-md-6 mb-4">
                <div class="card stats-card border-left-success border-0 shadow-sm h-100">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="card-title text-muted mb-2">Available Capacity</h6>
                                <h3 class="fw-bold text-success mb-0"><%= availableCapacity || 0 %></h3>
                                <small class="text-muted">out of <%= totalCapacity || 0 %> total</small>
                            </div>
                            <div class="bg-success bg-opacity-10 p-3 rounded">
                                <i class="bi bi-person-check text-success fs-4"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-xl-3 col-md-6 mb-4">
                <div class="card stats-card border-left-info border-0 shadow-sm h-100">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="card-title text-muted mb-2">Average Load</h6>
                                <h3 class="fw-bold text-info mb-0"><%= averageLoad || 0 %></h3>
                                <small class="text-muted">students per supervisor</small>
                            </div>
                            <div class="bg-info bg-opacity-10 p-3 rounded">
                                <i class="bi bi-graph-up text-info fs-4"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-xl-3 col-md-6 mb-4">
                <div class="card stats-card border-left-warning border-0 shadow-sm h-100">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="card-title text-muted mb-2">Fully Booked</h6>
                                <h3 class="fw-bold text-warning mb-0"><%= fullyBookedCount || 0 %></h3>
                                <small class="text-muted">supervisors at capacity</small>
                            </div>
                            <div class="bg-warning bg-opacity-10 p-3 rounded">
                                <i class="bi bi-exclamation-triangle text-warning fs-4"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Supervisors Grid View -->
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-white border-0 py-3">
                <div class="d-flex justify-content-between align-items-center">
                    <h5 class="mb-0 fw-semibold">
                        <i class="bi bi-grid-3x3-gap me-2"></i>Supervisors Overview
                    </h5>
                    <div class="d-flex gap-2">
                        <div class="input-group input-group-sm" style="width: 250px;">
                            <span class="input-group-text bg-white">
                                <i class="bi bi-search text-muted"></i>
                            </span>
                            <input type="text" class="form-control" id="searchSupervisors" placeholder="Search supervisors...">
                        </div>
                        <select class="form-select form-select-sm" id="availabilityFilter" style="width: 180px;">
                            <option value="all">All Availability</option>
                            <option value="high">High Availability</option>
                            <option value="medium">Medium Availability</option>
                            <option value="low">Low Availability</option>
                            <option value="full">Fully Booked</option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <% if (supervisors && supervisors.length > 0) { %>
                    <div class="row" id="supervisorsGrid">
                        <% supervisors.forEach((supervisor, index) => { 
                            const assignedCount = supervisor.assignedStudents || 0;
                            const maxCapacity = supervisor.max_students || 5;
                            const availableSlots = maxCapacity - assignedCount;
                            const utilizationRate = (assignedCount / maxCapacity) * 100;
                            
                            let availabilityClass = 'availability-high';
                            let availabilityText = 'High Availability';
                            
                            if (utilizationRate >= 90) {
                                availabilityClass = 'availability-full';
                                availabilityText = 'Fully Booked';
                            } else if (utilizationRate >= 70) {
                                availabilityClass = 'availability-low';
                                availabilityText = 'Low Availability';
                            } else if (utilizationRate >= 50) {
                                availabilityClass = 'availability-medium';
                                availabilityText = 'Medium Availability';
                            }
                            
                            const initials = supervisor.full_name.split(' ').map(n => n[0]).join('').toUpperCase();
                        %>
                            <div class="col-xl-4 col-lg-6 mb-4 supervisor-item" 
                                 data-name="<%= supervisor.full_name.toLowerCase() %>"
                                 data-availability="<%= availabilityText.toLowerCase().replace(' ', '-') %>">
                                <div class="card supervisor-card h-100 border-0 shadow-sm">
                                    <div class="card-body">
                                        <div class="d-flex align-items-start mb-3">
                                            <div class="supervisor-avatar me-3">
                                                <%= initials.substring(0, 2) %>
                                            </div>
                                            <div class="flex-grow-1">
                                                <h5 class="card-title mb-1 fw-semibold"><%= supervisor.full_name %></h5>
                                                <p class="text-muted mb-2 small">
                                                    <i class="bi bi-envelope me-1"></i><%= supervisor.email %>
                                                </p>
                                                <% if (supervisor.department) { %>
                                                    <span class="badge bg-light text-dark border small">
                                                        <%= supervisor.department %>
                                                    </span>
                                                <% } %>
                                            </div>
                                            <span class="badge <%= availabilityClass %>">
                                                <%= availabilityText %>
                                            </span>
                                        </div>

                                        <!-- Capacity Progress -->
                                        <div class="mb-3">
                                            <div class="d-flex justify-content-between align-items-center mb-2">
                                                <small class="text-muted fw-medium">Student Capacity</small>
                                                <small class="text-muted">
                                                    <span class="fw-semibold"><%= assignedCount %></span>/<%= maxCapacity %>
                                                </small>
                                            </div>
                                            <div class="capacity-bar bg-light">
                                                <div class="progress-bar h-100 <%= availabilityClass %>" 
                                                     style="width: <%= utilizationRate %>%">
                                                </div>
                                            </div>
                                        </div>

                                        <!-- Assigned Students -->
                                        <div class="mb-3">
                                            <h6 class="fw-semibold mb-2">Assigned Students</h6>
                                            <% if (supervisor.assignedStudentsList && supervisor.assignedStudentsList.length > 0) { %>
                                                <div class="assigned-students" style="max-height: 120px; overflow-y: auto;">
                                                    <% supervisor.assignedStudentsList.forEach(student => { %>
                                                        <div class="d-flex align-items-center justify-content-between py-1 border-bottom">
                                                            <div>
                                                                <small class="fw-medium"><%= student.full_name %></small>
                                                                <br>
                                                                <small class="text-muted"><%= student.department || 'No department' %></small>
                                                            </div>
                                                            <form action="/coordinator/unassign-student/<%= student.assignment_id %>" 
                                                                  method="POST" 
                                                                  class="d-inline">
                                                                <button type="submit" 
                                                                        class="btn btn-sm btn-outline-danger"
                                                                        onclick="return confirm('Unassign <%= student.full_name %> from <%= supervisor.full_name %>?')">
                                                                    <i class="bi bi-x"></i>
                                                                </button>
                                                            </form>
                                                        </div>
                                                    <% }); %>
                                                </div>
                                            <% } else { %>
                                                <p class="text-muted small mb-0">No students assigned yet</p>
                                            <% } %>
                                        </div>

                                        <!-- Actions -->
                                        <div class="d-grid gap-2">
                                            <% if (availableSlots > 0) { %>
                                                <button class="btn btn-outline-primary btn-sm assign-btn"
                                                        data-bs-toggle="modal"
                                                        data-bs-target="#assignToSupervisorModal"
                                                        data-supervisor-id="<%= supervisor.id %>"
                                                        data-supervisor-name="<%= supervisor.full_name %>"
                                                        data-available-slots="<%= availableSlots %>">
                                                    <i class="bi bi-person-plus me-1"></i>
                                                    Assign Student (<%= availableSlots %> slots)
                                                </button>
                                            <% } else { %>
                                                <button class="btn btn-outline-secondary btn-sm" disabled>
                                                    <i class="bi bi-person-x me-1"></i>
                                                    No Available Slots
                                                </button>
                                            <% } %>
                                            
                                            <div class="btn-group w-100">
                                                <button class="btn btn-outline-info btn-sm"
                                                        data-bs-toggle="modal"
                                                        data-bs-target="#supervisorDetailsModal"
                                                        data-supervisor-id="<%= supervisor.id %>">
                                                    <i class="bi bi-eye me-1"></i>View
                                                </button>
                                                <button class="btn btn-outline-warning btn-sm"
                                                        data-bs-toggle="modal"
                                                        data-bs-target="#editSupervisorModal"
                                                        data-supervisor-id="<%= supervisor.id %>"
                                                        data-supervisor-name="<%= supervisor.full_name %>"
                                                        data-supervisor-email="<%= supervisor.email %>"
                                                        data-supervisor-department="<%= supervisor.department || '' %>"
                                                        data-supervisor-capacity="<%= supervisor.max_students || 5 %>">
                                                    <i class="bi bi-pencil me-1"></i>Edit
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        <% }); %>
                    </div>
                <% } else { %>
                    <div class="text-center py-5">
                        <i class="bi bi-person-badge display-1 text-muted opacity-25 mb-3"></i>
                        <h4 class="text-muted">No Supervisors Found</h4>
                        <p class="text-muted">There are no supervisors available in the system.</p>
                        <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addSupervisorModal">
                            <i class="bi bi-person-plus me-1"></i>Add First Supervisor
                        </button>
                    </div>
                <% } %>
            </div>
        </div>
    </div>

    <!-- Add Supervisor Modal -->
    <div class="modal fade" id="addSupervisorModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <form action="/coordinator/add-supervisor" method="POST">
                    <div class="modal-header">
                        <h5 class="modal-title">Add New Supervisor</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                    </div>
                    <div class="modal-body">
                        <div class="mb-3">
                            <label class="form-label fw-semibold">Full Name</label>
                            <input type="text" class="form-control" name="full_name" required>
                        </div>
                        <div class="mb-3">
                            <label class="form-label fw-semibold">Email</label>
                            <input type="email" class="form-control" name="email" required>
                        </div>
                        <div class="mb-3">
                            <label class="form-label fw-semibold">Department</label>
                            <input type="text" class="form-control" name="department">
                        </div>
                        <div class="mb-3">
                            <label class="form-label fw-semibold">Max Students Capacity</label>
                            <input type="number" class="form-control" name="max_students" value="5" min="1" max="20" required>
                            <div class="form-text">Maximum number of students this supervisor can handle</div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-person-plus me-1"></i>Add Supervisor
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Edit Supervisor Modal -->
    <div class="modal fade" id="editSupervisorModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <form action="/coordinator/update-supervisor" method="POST">
                    <div class="modal-header">
                        <h5 class="modal-title">Edit Supervisor</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                    </div>
                    <div class="modal-body">
                        <input type="hidden" name="supervisor_id" id="editSupervisorId">
                        <div class="mb-3">
                            <label class="form-label fw-semibold">Full Name</label>
                            <input type="text" class="form-control" name="full_name" id="editSupervisorName" required>
                        </div>
                        <div class="mb-3">
                            <label class="form-label fw-semibold">Email</label>
                            <input type="email" class="form-control" name="email" id="editSupervisorEmail" required>
                        </div>
                        <div class="mb-3">
                            <label class="form-label fw-semibold">Department</label>
                            <input type="text" class="form-control" name="department" id="editSupervisorDepartment">
                        </div>
                        <div class="mb-3">
                            <label class="form-label fw-semibold">Max Students Capacity</label>
                            <input type="number" class="form-control" name="max_students" id="editSupervisorCapacity" min="1" max="20" required>
                            <div class="form-text">Maximum number of students this supervisor can handle</div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-check-circle me-1"></i>Update Supervisor
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Assign to Supervisor Modal -->
    <div class="modal fade" id="assignToSupervisorModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <form action="/coordinator/assign-to-supervisor" method="POST">
                    <div class="modal-header">
                        <h5 class="modal-title">Assign Student to Supervisor</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                    </div>
                    <div class="modal-body">
                        <input type="hidden" name="supervisor_id" id="assignSupervisorId">
                        <div class="mb-3">
                            <label class="form-label fw-semibold">Supervisor</label>
                            <input type="text" id="assignSupervisorName" class="form-control" readonly>
                            <small class="text-muted" id="assignSupervisorSlots"></small>
                        </div>
                        <div class="mb-3">
                            <label class="form-label fw-semibold">Select Student</label>
                            <select class="form-select" name="student_id" required>
                                <option value="">Choose a student...</option>
                                <% if (unassignedStudentsList && unassignedStudentsList.length > 0) { 
                                    unassignedStudentsList.forEach(student => { %>
                                    <option value="<%= student.id %>">
                                        <%= student.full_name %> - <%= student.department || 'No department' %>
                                    </option>
                                <% }); } else { %>
                                    <option value="" disabled>No unassigned students available</option>
                                <% } %>
                            </select>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-person-plus me-1"></i>Assign Student
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Supervisor Details Modal -->
    <div class="modal fade" id="supervisorDetailsModal" tabindex="-1">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Supervisor Details</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body" id="supervisorDetailsContent">
                    <!-- Details will be loaded via JavaScript -->
                    <div class="text-center py-4">
                        <div class="spinner-border text-primary" role="status">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                        <p class="mt-2 text-muted">Loading supervisor details...</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap & JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    
    <script>
    document.addEventListener('DOMContentLoaded', function() {
        // Filter functionality
        const searchInput = document.getElementById('searchSupervisors');
        const availabilityFilter = document.getElementById('availabilityFilter');
        const supervisorItems = document.querySelectorAll('.supervisor-item');

        function filterSupervisors() {
            const searchTerm = searchInput.value.toLowerCase();
            const availabilityValue = availabilityFilter.value;

            supervisorItems.forEach(item => {
                const name = item.getAttribute('data-name');
                const availability = item.getAttribute('data-availability');

                const matchesSearch = name.includes(searchTerm);
                const matchesAvailability = availabilityValue === 'all' || availability === availabilityValue;

                if (matchesSearch && matchesAvailability) {
                    item.style.display = 'block';
                } else {
                    item.style.display = 'none';
                }
            });
        }

        searchInput.addEventListener('input', filterSupervisors);
        availabilityFilter.addEventListener('change', filterSupervisors);

        // Edit supervisor modal
        const editSupervisorModal = document.getElementById('editSupervisorModal');
        if (editSupervisorModal) {
            editSupervisorModal.addEventListener('show.bs.modal', function(event) {
                const button = event.relatedTarget;
                document.getElementById('editSupervisorId').value = button.getAttribute('data-supervisor-id');
                document.getElementById('editSupervisorName').value = button.getAttribute('data-supervisor-name');
                document.getElementById('editSupervisorEmail').value = button.getAttribute('data-supervisor-email');
                document.getElementById('editSupervisorDepartment').value = button.getAttribute('data-supervisor-department');
                document.getElementById('editSupervisorCapacity').value = button.getAttribute('data-supervisor-capacity');
            });
        }

        // Assign to supervisor modal
        const assignToSupervisorModal = document.getElementById('assignToSupervisorModal');
        if (assignToSupervisorModal) {
            assignToSupervisorModal.addEventListener('show.bs.modal', function(event) {
                const button = event.relatedTarget;
                const supervisorId = button.getAttribute('data-supervisor-id');
                const supervisorName = button.getAttribute('data-supervisor-name');
                const availableSlots = button.getAttribute('data-available-slots');

                document.getElementById('assignSupervisorId').value = supervisorId;
                document.getElementById('assignSupervisorName').value = supervisorName;
                document.getElementById('assignSupervisorSlots').textContent = `${availableSlots} available slots remaining`;
            });
        }

        // Supervisor details modal
        const supervisorDetailsModal = document.getElementById('supervisorDetailsModal');
        if (supervisorDetailsModal) {
            supervisorDetailsModal.addEventListener('show.bs.modal', function(event) {
                const button = event.relatedTarget;
                const supervisorId = button.getAttribute('data-supervisor-id');
                
                // Load supervisor details via AJAX
                fetch(`/coordinator/supervisor-details/${supervisorId}`)
                    .then(response => response.text())
                    .then(html => {
                        document.getElementById('supervisorDetailsContent').innerHTML = html;
                    })
                    .catch(error => {
                        document.getElementById('supervisorDetailsContent').innerHTML = `
                            <div class="alert alert-danger">
                                <i class="bi bi-exclamation-triangle me-2"></i>
                                Failed to load supervisor details: ${error.message}
                            </div>
                        `;
                    });
            });
        }

        // Refresh button
        const refreshBtn = document.getElementById('refreshBtn');
        if (refreshBtn) {
            refreshBtn.addEventListener('click', function() {
                this.innerHTML = '<span class="spinner-border spinner-border-sm me-2"></span>Refreshing...';
                this.disabled = true;
                setTimeout(() => {
                    location.reload();
                }, 1000);
            });
        }
    });
    </script>
</body>
</html>