<!-- Page Header -->
<div class="row mb-4">
  <div class="col-12">
    <h1 class="page-title"><i class="bi bi-speedometer2 me-2"></i>Student Dashboard</h1>
    <p class="page-subtitle">Track your project submissions and feedback</p>
  </div>
</div>

<!-- Supervisor Information -->
<div class="row mb-4">
  <div class="col-12">
    <% if (supervisor) { %>
      <div class="card supervisor-card">
        <div class="card-body">
          <div class="d-flex align-items-center">
            <div class="flex-grow-1">
              <h5 class="alert-heading mb-2">
                <i class="bi bi-person-check me-2"></i>Your Supervisor
              </h5>
              <p class="mb-0">
                <strong><%= supervisor.full_name %></strong><br>
                <small class="text-muted"><%= supervisor.email %></small>
              </p>
            </div>
            <div class="ms-auto">
              <button class="btn btn-outline-primary">
                <i class="bi bi-envelope me-1"></i> Contact
              </button>
            </div>
          </div>
        </div>
      </div>
    <% } else { %>
      <div class="alert alert-warning">
        <div class="d-flex align-items-center">
          <div class="flex-grow-1">
            <i class="bi bi-exclamation-triangle me-2"></i>
            <strong>Supervisor Required</strong>
            <p class="mb-0 mt-1">You need to be assigned a supervisor before you can upload reports. Please wait for your level coordinator to assign one.</p>
          </div>
          <div class="ms-3">
            <a href="/student/supervisor" class="btn btn-outline-warning btn-sm">
              <i class="bi bi-person-workspace me-1"></i>View Supervisor Status
            </a>
          </div>
        </div>
      </div>
    <% } %>
  </div>
</div>

<!-- Reports Section -->
<div class="card mb-4">
  <div class="card-header bg-white d-flex justify-content-between align-items-center">
    <h5 class="mb-0"><i class="bi bi-file-earmark-text me-2"></i>My Reports</h5>
    <% if (supervisor) { %>
      <a href="/student/upload-report" class="btn btn-primary">
        <i class="bi bi-cloud-upload me-1"></i>Upload New Report
      </a>
    <% } else { %>
      <button class="btn btn-primary" disabled data-bs-toggle="tooltip" data-bs-placement="top" title="Please wait for supervisor assignment">
        <i class="bi bi-cloud-upload me-1"></i>Upload New Report
      </button>
    <% } %>
  </div>
  <div class="card-body">
    <% if (reports && reports.length > 0) { %>
      <div class="table-responsive">
        <table class="table table-hover">
          <thead>
            <tr>
              <th>Title</th>
              <th>Stage</th>
              <th>Version</th>
              <th>Status</th>
              <th>Submitted</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% reports.forEach(report => { %>
              <tr>
                <td><%= report.title %></td>
                <td>
                  <span class="badge badge-stage">
                    <%= report.report_stage.replace('_', ' ').toUpperCase() %>
                  </span>
                </td>
                <td>v<%= report.version %></td>
                <td>
                  <% if (report.status === 'pending') { %>
                    <span class="badge badge-pending">Pending Review</span>
                  <% } else if (report.status === 'approved') { %>
                    <span class="badge badge-approved">Approved</span>
                  <% } else if (report.status === 'rejected') { %>
                    <span class="badge badge-rejected">Rejected</span>
                  <% } else if (report.status === 'feedback_given') { %>
                    <span class="badge badge-feedback">Feedback Given</span>
                  <% } else { %>
                    <span class="badge bg-secondary"><%= report.status %></span>
                  <% } %>
                </td>
                <td><%= new Date(report.submitted_at).toLocaleDateString() %></td>
                <td>
                  <a href="/student/report/<%= report.id %>" class="btn btn-sm btn-outline-primary me-1">
                    <i class="bi bi-eye"></i> View
                  </a>
                  <% if (report.status === 'feedback_given' || report.status === 'rejected') { %>
                    <% if (supervisor) { %>
                      <a href="/student/reupload/<%= report.id %>" class="btn btn-sm btn-outline-warning">
                        <i class="bi bi-arrow-repeat"></i> Reupload
                      </a>
                    <% } else { %>
                      <button class="btn btn-sm btn-outline-warning" disabled data-bs-toggle="tooltip" data-bs-placement="top" title="Supervisor required for reupload">
                        <i class="bi bi-arrow-repeat"></i> Reupload
                      </button>
                    <% } %>
                  <% } %>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    <% } else { %>
      <div class="empty-state">
        <i class="bi bi-file-earmark-text"></i>
        <h5>No Reports Submitted Yet</h5>
        <p class="text-muted">
          <% if (supervisor) { %>
            You haven't submitted any reports yet. Start by uploading your first report.
          <% } else { %>
            You need to be assigned a supervisor before you can upload reports.
          <% } %>
        </p>
        <% if (supervisor) { %>
          <a href="/student/upload-report" class="btn btn-primary">
            <i class="bi bi-cloud-upload me-1"></i>Upload Your First Report
          </a>
        <% } else { %>
          <button class="btn btn-primary" disabled data-bs-toggle="tooltip" data-bs-placement="top" title="Please wait for supervisor assignment">
            <i class="bi bi-cloud-upload me-1"></i>Upload Your First Report
          </button>
          <div class="mt-2">
            <a href="/student/supervisor" class="btn btn-outline-warning btn-sm">
              <i class="bi bi-person-workspace me-1"></i>Check Supervisor Status
            </a>
          </div>
        <% } %>
      </div>
    <% } %>
  </div>
</div>

<!-- Progress Overview -->
<div class="row">
  <% 
    const stages = [
      { key: 'progress_1', name: 'PROGRESS 1 REPORT', icon: 'bi-1-circle' },
      { key: 'progress_2', name: 'PROGRESS 2 REPORT', icon: 'bi-2-circle' },
      { key: 'progress_3', name: 'PROGRESS 3 REPORT', icon: 'bi-3-circle' },
      { key: 'final', name: 'FINAL REPORT', icon: 'bi-flag' }
    ];
  %>
  
  <% stages.forEach(stage => { %>
    <div class="col-md-6 mb-3">
      <div class="card stage-card">
        <div class="card-header bg-white">
          <h6 class="mb-0">
            <i class="<%= stage.icon %> me-2 text-primary"></i><%= stage.name %>
          </h6>
        </div>
        <div class="card-body">
          <% if (reportsByStage[stage.key] && reportsByStage[stage.key].length > 0) { 
            const latestReport = reportsByStage[stage.key][0];
          %>
            <div class="d-flex justify-content-between align-items-center">
              <div>
                <% if (latestReport.status === 'pending') { %>
                  <span class="badge badge-pending mb-2">Pending Review</span>
                <% } else if (latestReport.status === 'approved') { %>
                  <span class="badge badge-approved mb-2">Approved</span>
                <% } else if (latestReport.status === 'rejected') { %>
                  <span class="badge badge-rejected mb-2">Revisions Required</span>
                <% } else if (latestReport.status === 'feedback_given') { %>
                  <span class="badge badge-feedback mb-2">Feedback Given</span>
                <% } else { %>
                  <span class="badge bg-secondary mb-2"><%= latestReport.status %></span>
                <% } %>
                <p class="text-muted mb-0">Submitted: <%= new Date(latestReport.submitted_at).toLocaleDateString() %></p>
              </div>
              <a href="/student/report/<%= latestReport.id %>" class="btn btn-sm btn-outline-primary">
                View Details
              </a>
            </div>
          <% } else { %>
            <div class="d-flex justify-content-between align-items-center">
              <div>
                <span class="badge bg-light text-muted mb-2">Not Submitted</span>
                <p class="text-muted mb-0">
                  <% if (supervisor) { %>
                    Ready to upload
                  <% } else { %>
                    Awaiting supervisor
                  <% } %>
                </p>
              </div>
              <% if (supervisor) { %>
                <a href="/student/upload-report" class="btn btn-sm btn-primary">
                  Upload
                </a>
              <% } else { %>
                <button class="btn btn-sm btn-primary" disabled data-bs-toggle="tooltip" data-bs-placement="top" title="Supervisor required for upload">
                  Upload
                </button>
              <% } %>
            </div>
          <% } %>
        </div>
      </div>
    </div>
  <% }) %>
</div>

<!-- Additional Information Card for Students Without Supervisor -->
<% if (!supervisor) { %>
<div class="row mt-3">
  <div class="col-12">
    <div class="card border-info">
      <div class="card-header bg-info text-white">
        <h6 class="mb-0">
          <i class="bi bi-info-circle me-2"></i>Next Steps
        </h6>
      </div>
      <div class="card-body">
        <div class="row">
          <div class="col-md-8">
            <h6>What happens next?</h6>
            <ul class="mb-3">
              <li>Your level coordinator will assign a supervisor based on your project topic</li>
              <li>You'll receive an email notification when assigned</li>
              <li>Your supervisor will contact you to schedule an initial meeting</li>
              <li>You can then begin submitting your project reports</li>
            </ul>
            <p class="text-muted small mb-0">
              If you haven't been assigned a supervisor within a week, please contact your level coordinator.
            </p>
          </div>
          <div class="col-md-4 text-center">
            <div class="bg-light rounded-3 p-4">
              <i class="bi bi-person-workspace display-4 text-muted mb-3"></i>
              <p class="small text-muted mb-0">Supervisor assignment in progress</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<% } %>

<!-- Success/Error Messages -->
<% if (success) { %>
  <div class="alert alert-success alert-dismissible fade show mt-3" role="alert">
    <i class="bi bi-check-circle me-2"></i><%= success %>
    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
  </div>
<% } %>

<% if (error) { %>
  <div class="alert alert-danger alert-dismissible fade show mt-3" role="alert">
    <i class="bi bi-exclamation-triangle me-2"></i><%= error %>
    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
  </div>
<% } %>

<!-- JavaScript for Tooltips -->
<script>
  // Initialize Bootstrap tooltips
  document.addEventListener('DOMContentLoaded', function() {
    var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
    var tooltipList = tooltipTriggerList.map(function(tooltipTriggerEl) {
      return new bootstrap.Tooltip(tooltipTriggerEl);
    });
  });
</script>

<style>
  .btn:disabled {
    cursor: not-allowed;
    opacity: 0.6;
  }
  
  .stage-card .btn:disabled:hover {
    transform: none;
    box-shadow: none;
  }
  
  .empty-state .btn:disabled {
    margin-bottom: 0.5rem;
  }
</style>